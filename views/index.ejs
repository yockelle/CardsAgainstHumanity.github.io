<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

<!-- import socketio -->
<script type="text/javascript" src="https://cdn.socket.io/socket.io-1.4.5.js"></script>
<script src="/socket.io/socket.io.js"></script>

<!-- import boostrap -->
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>


<!-- import client javascript, and css styling sheets (this is our own script) -->
<script src="public/client.js"></script>
<link rel="stylesheet" type="text/css" href="/public/loginPage.css">
<link rel="stylesheet" type="text/css" href="/public/mainStyle.css">
<link rel="stylesheet" type="text/css" href="/public/lobbyPage.css">

<!DOCTYPE html>
<html>

<head>
	<meta charset="UTF-8">
	<title>Cards against Humanity</title>
</head>

<body>
	<!--Default display once someone goes to our site-->
	<div id="LoginForm">
		<div>
			<h1 class="form-heading"></h1>
			<div class="login-form">
				<div class="main-div">
					<div class="panel">
						<h2>Login</h2>
						<p>Please enter your username and password</p>
					</div>
					<form id="Login">
						<div class="form-group">
							<input type="text" class="form-control" id="inputname" placeholder="Username">
						</div>
						<div class="form-group">
							<input type="password" class="form-control" id="inputpass" placeholder="Password">
						</div>
						<div class="forgot">
							<a href="#">Forgot password?</a>
						</div>
						<div id="buttons">
							<button type="button" class="btn btn-primary" onclick="userLogin()">Login</button>
						</div>
						<div id="buttons">
							<button type="button" class="btn btn-secondary" onclick="userRegister()">Register</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>

	<!--Default display is none, will show once player logs in-->
	<section id="Lobby" class="row-section">
		<div class="container">
			<div class="row">
				<h2 class="text-center"><span></span></h2>
			</div>

			<div id="PlayerList" class="col-sm-4 offset-md-1 row-block">
				<!-- <ul id="sortable">
					<li>
						<div class="media">
							<div class="media-left align-self-center">
								<img class="rounded-circle" src="/public/Player_Avatar.jpg">
							</div>
							<div class="media-body">
								<h4>Bob1123</h4>
								<p>SocketID: aDEFA123</p>
							</div>
						</div>
					</li>
				</ul> -->
			</div>
		</div>

		<div class="col-md-10 offset-md-1 row-block">
			<ul id="sortable">
				<li>
					<div class="media">
						<div class="media-left align-self-center">
							<img class="rounded-circle" src="/public/CAH_Logo.png">
						</div>
						<div class="media-body">
							<h4>Game: 1</h4>
							<p>Current Players: 0</p>
						</div>
						<div class="media-right align-self-center">
							<a href="#" class="btn btn-default">Join</a>
						</div>
					</div>
				</li>
			</ul>
		</div>
		</div>
	</section>

	<!--Default display is none, will show once player starts game-->
	<div id="Game">
		<h1> Dynamic page: Cards Against Humanity. Hello
			<%= username %>
		</h1>
		<div id="CardDisplayField">
			<div class="card">
				<img src="/public/CAH_Logo.png" alt="Avatar" style="width:100%">
				<div class="container">
					<h4><b>
							<%= promptCard["cardid"]%>
							<%=promptCard["cardValue"]%></b></h4>
					<p>Prompt Cards</p>
				</div>
			</div>
		</div>

		<!-- for each card in userhand (passed in from server, loop through and display-->
		<div id="CardDisplayField">
			<% for(var i=0; i < userhand.length; i++) { %>
			<div class="card">
				<img src="/public/CAH_Logo.png" alt="Avatar" style="width:100%">
				<div class="container">
					<h4><b>CardID:
							<%=userhand[i]["cardid"]%>
							<%=userhand[i]["cardValue"]%></b></h4>
					<p>Player Cards</p>
				</div>
			</div>
			<% } %>
		</div>

		<h2> Pick a card to play: </h2>
		<div id="Your Hand">
			<button onclick="sendCard('<%= userhand[0] %>');">
				<%= userhand[0] %> </button>
			<button onclick="sendCard('<%= userhand[1] %>');">
				<%= userhand[1] %> </button>
		</div>
		<canvas id="myCanvas" width="200" height="100"></canvas>

	</div>
</body>

</html>